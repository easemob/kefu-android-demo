<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="150dp"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/oneFlt"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/top_chamfer_shape"
            android:layout_width="match_parent"
            android:layout_height="42dp">
            <TextView
                android:id="@+id/cameraTextView"
                android:text="@string/vec_close_camera"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical|start"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <!--android:text="\ue640"-->
            <com.easemob.veckit.ui.IconTextView
                android:id="@+id/cameraIcon"
                android:textSize="22sp"
                android:textColor="#ff4400"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical|end"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </FrameLayout>
        <View
            android:background="#dddddddd"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <FrameLayout
            android:id="@+id/twoFlt"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/bottom_chamfer_shape"
            android:layout_width="match_parent"
            android:layout_height="42dp">
            <TextView
                android:text="@string/vec_switch_camera"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical|start"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <com.easemob.veckit.ui.IconTextView
                android:textColor="#3B84F7"
                android:text="\ue67d"
                android:textSize="22sp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical|end"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>