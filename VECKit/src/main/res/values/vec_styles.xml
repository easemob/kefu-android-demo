<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="translucent_style_vec" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AnimFade2" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/hd_slide_in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/hd_slide_out_to_left</item>
        <item name="android:activityCloseExitAnimation">@anim/hd_slide_out_to_right</item>
        <item name="android:activityCloseEnterAnimation">@anim/hd_slide_in_from_left</item>
    </style>

    <style name="default_style" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@null</item>
    </style>
<!--
    <style name="default_style" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@null</item>
    </style>
-->

    <style name="myRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/hd_ratingbar_drawable</item>
        <item name="android:minHeight">52dip</item>
        <item name="android:maxHeight">52dip</item>
    </style>

    <style name="Theme_Audio_Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <declare-styleable name="HDEmojiconMenu">
        <attr name="hdBigEmojiconRows" format="integer"/>
        <attr name="hdEmojiconColumns" format="integer"/>
    </declare-styleable>

    <declare-styleable name="EaseChatMessageList">
        <attr name="msgListMyBubbleBackground" format="reference"/>
        <attr name="msgListOtherBubbleBackground" format="reference"/>
        <attr name="msgListShowUserAvatar" format="boolean"/>
        <attr name="msgListShowUserNick" format="boolean"/>
    </declare-styleable>

    <style name="chat_text_date_style">
        <item name="android:padding">2dp</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:paddingRight">12dip</item>
        <item name="android:textColor">@color/btn_gray_normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/hd_timestampe_bg</item>
    </style>

    <style name="chat_text_name_style">
        <item name="android:textColor">#818181</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="horizontal_slide" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/AnimFade2</item>
    </style>

    <style name="ligtht_default_style" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

</resources>