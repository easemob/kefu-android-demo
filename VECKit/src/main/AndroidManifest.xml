<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.easemob.veckit">

    <!--存储权限：-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!--相机和麦克风相关权限：-->
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <!--悬浮权限（视频页面使用）-->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />


    <application>
        <!--android:screenOrientation="portrait"-->
        <activity android:name=".CallVideoActivity"
            android:configChanges=
                "screenSize|smallestScreenSize|screenLayout|orientation"
            android:launchMode="singleTask"
            android:theme="@style/translucent_style_vec"/>

        <activity android:name=".CloudActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ligtht_default_style"/>

        <activity android:name=".BlankActivity"
            android:screenOrientation="portrait"
            android:theme="@style/default_style"/>

        <!--android:configChanges="orientation|keyboardHidden|screenSize"-->
        <activity android:name=".CallActivity"
            android:theme="@style/default_style"
            android:configChanges=
                "screenSize|smallestScreenSize|screenLayout|orientation"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"/>

        <activity android:name=".NavActivity"
            android:theme="@style/translucent_style_vec"/>

        <!--android:screenOrientation="portrait"-->
        <activity android:name=".VECKitCalling"
            android:configChanges="orientation"
            android:launchMode="singleTask"
            android:theme="@style/translucent_style_vec" />

        <activity android:name=".ShowBigImageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/default_style"/>

        <activity android:name=".BlankSpaceActivity"
            android:launchMode="singleTop"
            android:theme="@style/translucent_style_vec" />

        <service android:name=".VideoCallWindowService" />
    </application>
</manifest>